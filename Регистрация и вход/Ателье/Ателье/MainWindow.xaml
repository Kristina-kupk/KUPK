        <TextBox x:Name="tbPass" Width="150" FontSize="16" Canvas.Left="185" Canvas.Top="125"/>
        <Button x:Name="btVhod" Content="Войти" FontWeight="Bold" FontSize="18" Canvas.Left="85" Canvas.Top="170" Width="250" Height="40" Click="btVhod_Click"/>
        <Button x:Name="btReg" Content="Регистрация" FontWeight="Bold" FontSize="16" Canvas.Left="85" Canvas.Top="230" Width="250" Height="40" Click="btReg_Click"/>
    </Canvas>
</Window>
